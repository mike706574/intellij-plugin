<idea-plugin>
    <id>com.github.mike706574.intellijplugin2</id>
    <name>intellij-plugin-2</name>
    <vendor>mike706574</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.mike706574.intellijplugin2.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.mike706574.intellijplugin2.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.mike706574.intellijplugin2.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
